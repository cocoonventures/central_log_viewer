- content_for :log_listing do
  = render :partial => "log_listing"
.top
  %form{ :action => 'post', :method => 'post'}
    %h1 Log Viewer
    .label Listing Fields:
    %textarea#fields
    %input{:type => "checkbox"}
    Tail -f
    %p
    .label Query:
    %textarea#query{:name => 'query'} find_one({})
    %input#run_query{:type => "button", :value => "Run Query"}
    %input#clear_log_listing{:type => "button", :value => "Clear"}
%p
.left
  .group
    %h3 Applications
    %p
    #application_filter
  .group
    %h3 Common Filters
    %p
    %table
      %thead
        %th Attribute
        %th Value
      %tbody
        %tr
          %td order_id
          %td 20303
        %tr
          %td severity
          %td info
        %tr
          %td log contains
          %td
        %tr
          %td request start
          %td
        %tr
          %td request end
          %td
    %p
  .group
    %h3 Status
    %p
    Query Timestamp:
    %p
    #query_time
    %p
    Total Records:
    #record_count
.right
  .group
    %h3 Listing
    %p
    = yield :log_listing
  %p
